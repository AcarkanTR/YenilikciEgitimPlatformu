@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "İki Faktörlü Doğrulama";
}

<style>
    input:-webkit-autofill {
        -webkit-box-shadow: 0 0 0 30px rgba(255, 255, 255, 0) inset !important;
        -webkit-text-fill-color: inherit !important;
        transition: background-color 5000s ease-in-out 0s;
    }

    .bg-dot-pattern {
        background-image: radial-gradient(#e5e7eb 1px, transparent 1px);
        background-size: 24px 24px;
    }

    .dark .bg-dot-pattern {
        background-image: none;
    }
</style>

<div class="relative min-h-[calc(100vh-5rem)] flex items-center justify-center overflow-hidden py-12 px-4 sm:px-6 lg:px-8 bg-gray-50/50 dark:bg-transparent">

    <div class="absolute inset-0 z-0 pointer-events-none">
        <div class="absolute inset-0 bg-dot-pattern opacity-60 dark:opacity-0"></div>
        <div class="absolute top-0 right-0 w-96 h-96 bg-cyan-500/20 rounded-full mix-blend-multiply dark:mix-blend-screen filter blur-[90px] animate-blob"></div>
    </div>

    <div class="relative w-full max-w-md z-10 animate__animated animate__fadeInUp group">

        <div class="bg-white/80 dark:bg-petrol-950/80 backdrop-blur-2xl rounded-3xl shadow-2xl border border-white/60 dark:border-petrol-700/50 p-8 sm:p-10 relative overflow-hidden transition-all duration-500 hover:shadow-cyan-500/10 hover:border-cyan-500/30">

            <div class="text-center mb-8">
                <div class="mx-auto h-20 w-20 bg-gradient-to-tr from-cyan-400 to-blue-500 rounded-2xl flex items-center justify-center shadow-lg mb-6 group-hover:scale-110 group-hover:rotate-3 transition-transform duration-500">
                    <i class="fas fa-shield-alt text-3xl text-white"></i>
                </div>
                <h2 class="text-2xl font-extrabold tracking-tight text-gray-900 dark:text-white">
                    Güvenli Giriş
                </h2>
                <p class="mt-2 text-sm text-gray-600 dark:text-gray-400 font-medium">
                    Hesabınız koruma altında. Lütfen doğrulayıcı uygulamanızdaki kodu girin.
                </p>
            </div>

            <form method="post" asp-route-returnUrl="@Model.ReturnUrl" class="space-y-6">
                <input asp-for="RememberMe" type="hidden" />
                <div asp-validation-summary="ModelOnly" class="text-cyan-600 text-sm font-bold text-center bg-cyan-50 dark:bg-cyan-900/10 p-3 rounded-xl border border-cyan-100 dark:border-cyan-900/20" role="alert"></div>

                <div class="relative">
                    <input asp-for="Input.TwoFactorCode"
                           id="floating_code"
                           class="block px-2.5 pb-2.5 pt-5 w-full text-center text-xl tracking-widest font-mono text-gray-900 bg-gray-50/50 dark:bg-petrol-900/50 rounded-xl border border-gray-300 dark:border-petrol-600 appearance-none dark:text-white focus:outline-none focus:ring-0 focus:border-cyan-500 focus:bg-white dark:focus:bg-petrol-900 peer transition-all duration-200"
                           placeholder=" "
                           autocomplete="off" />

                    <label for="floating_code"
                           class="absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-4 scale-75 top-4 z-10 origin-[0] left-1/2 -translate-x-1/2 peer-focus:text-cyan-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-placeholder-shown:top-3.5 peer-placeholder-shown:left-1/2 peer-placeholder-shown:-translate-x-1/2 peer-focus:scale-75 peer-focus:-translate-y-4 font-medium pointer-events-none">
                        Doğrulama Kodu
                    </label>
                    <span asp-validation-for="Input.TwoFactorCode" class="text-red-500 text-xs mt-1 block font-bold text-center"></span>
                </div>

                <div class="flex items-center justify-center">
                    <div class="flex items-center h-5">
                        <input asp-for="Input.RememberMachine" class="w-5 h-5 text-cyan-600 bg-gray-100 border-gray-300 rounded focus:ring-cyan-500 dark:focus:ring-cyan-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600 cursor-pointer transition-all" />
                    </div>
                    <div class="ml-3 text-sm">
                        <label asp-for="Input.RememberMachine" class="font-medium text-gray-700 dark:text-gray-300 cursor-pointer select-none">
                            Bu cihazı hatırla
                        </label>
                    </div>
                </div>

                <button type="submit" class="group relative w-full flex justify-center py-4 px-4 border border-transparent text-sm font-bold rounded-xl text-white bg-gradient-to-r from-cyan-600 to-blue-600 hover:from-cyan-700 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-cyan-500 shadow-lg shadow-cyan-500/30 hover:shadow-xl hover:shadow-cyan-500/40 hover:-translate-y-1 transition-all duration-300 overflow-hidden">
                    <span class="absolute left-0 inset-y-0 flex items-center pl-4">
                        <i class="fas fa-sign-in-alt text-lg group-hover:translate-x-1 transition-transform duration-300"></i>
                    </span>
                    Giriş Yap
                </button>
            </form>

            <div class="mt-6 text-center">
                <p class="text-sm text-gray-500 dark:text-gray-400">
                    Cihazınıza erişemiyor musunuz?
                    <a id="recovery-code-login" asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl" class="font-bold text-cyan-600 hover:text-cyan-700 dark:text-cyan-400 dark:hover:text-cyan-300 transition-colors">
                        Kurtarma kodu ile giriş yapın
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}