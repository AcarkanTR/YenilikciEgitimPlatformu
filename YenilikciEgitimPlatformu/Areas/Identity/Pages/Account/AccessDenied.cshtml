@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Erişim Engellendi";
}

<style>
    .bg-dot-pattern {
        background-image: radial-gradient(#e5e7eb 1px, transparent 1px);
        background-size: 24px 24px;
    }

    .dark .bg-dot-pattern {
        background-image: none;
    }
</style>

<div class="relative min-h-[calc(100vh-5rem)] flex items-center justify-center overflow-hidden py-12 px-4 sm:px-6 lg:px-8 bg-gray-50/50 dark:bg-transparent">

    <div class="absolute inset-0 z-0 pointer-events-none">
        <div class="absolute inset-0 bg-dot-pattern opacity-60 dark:opacity-0"></div>
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-red-500/20 rounded-full mix-blend-multiply dark:mix-blend-screen filter blur-[90px] animate-blob"></div>
    </div>

    <div class="relative w-full max-w-md z-10 animate__animated animate__shakeX group">
        <div class="bg-white/80 dark:bg-petrol-950/80 backdrop-blur-2xl rounded-3xl shadow-2xl border border-red-200 dark:border-red-900/50 p-8 text-center relative overflow-hidden">

            <div class="mx-auto h-24 w-24 bg-gradient-to-br from-red-500 to-red-700 rounded-2xl flex items-center justify-center shadow-lg mb-6 group-hover:scale-110 group-hover:rotate-12 transition-transform duration-500">
                <i class="fas fa-ban text-4xl text-white"></i>
            </div>

            <h1 class="text-3xl font-extrabold text-red-600 dark:text-red-500 mb-2">
                @ViewData["Title"]
            </h1>

            <p class="text-gray-600 dark:text-gray-300 mb-8 font-medium">
                Bu sayfaya erişim yetkiniz bulunmamaktadır.
            </p>

            <a href="/" class="inline-flex justify-center items-center py-3 px-6 border border-transparent text-sm font-bold rounded-xl text-white bg-red-600 hover:bg-red-700 shadow-lg hover:shadow-red-500/30 transition-all hover:-translate-y-1 w-full">
                <i class="fas fa-home mr-2"></i> Ana Sayfaya Dön
            </a>
        </div>
    </div>
</div>