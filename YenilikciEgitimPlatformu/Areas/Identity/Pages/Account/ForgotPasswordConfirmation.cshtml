@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "E-posta Gönderildi";
}

<style>
    .bg-dot-pattern {
        background-image: radial-gradient(#e5e7eb 1px, transparent 1px);
        background-size: 24px 24px;
    }

    .dark .bg-dot-pattern {
        background-image: none;
    }
</style>

<div class="relative min-h-[calc(100vh-5rem)] flex items-center justify-center overflow-hidden py-12 px-4 sm:px-6 lg:px-8 bg-gray-50/50 dark:bg-transparent">

    <!-- Background -->
    <div class="absolute inset-0 z-0 pointer-events-none">
        <div class="absolute inset-0 bg-dot-pattern opacity-60 dark:opacity-0"></div>
        <div class="absolute top-[-10%] left-[-10%] w-96 h-96 bg-green-500/20 rounded-full mix-blend-multiply dark:mix-blend-screen filter blur-[90px] animate-blob"></div>
    </div>

    <div class="relative w-full max-w-md z-10 animate__animated animate__zoomIn group">
        <div class="bg-white/80 dark:bg-petrol-950/80 backdrop-blur-2xl rounded-3xl shadow-2xl border border-white/60 dark:border-petrol-700/50 p-8 sm:p-10 text-center relative overflow-hidden">

            <div class="mx-auto h-24 w-24 bg-gradient-to-tr from-green-400 to-green-600 rounded-full flex items-center justify-center shadow-lg mb-6 group-hover:scale-110 transition-transform duration-500">
                <i class="fas fa-envelope-open-text text-4xl text-white"></i>
            </div>

            <h2 class="text-2xl font-extrabold text-gray-900 dark:text-white mb-4">
                Lütfen E-postanızı Kontrol Edin
            </h2>

            <p class="text-gray-600 dark:text-gray-300 mb-8 leading-relaxed">
                Şifrenizi sıfırlamanız için gerekli bağlantıyı e-posta adresinize gönderdik. Lütfen gelen kutunuzu (veya spam klasörünü) kontrol edin.
            </p>

            <a href="/" class="inline-flex justify-center items-center py-3 px-6 border border-transparent text-sm font-bold rounded-xl text-white bg-green-600 hover:bg-green-700 shadow-lg hover:shadow-green-500/30 transition-all hover:-translate-y-1">
                Ana Sayfaya Dön
            </a>
        </div>
    </div>
</div>