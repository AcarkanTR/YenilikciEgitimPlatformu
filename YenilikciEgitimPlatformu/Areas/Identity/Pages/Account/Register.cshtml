@page
@model RegisterModel
@{
    ViewData["Title"] = "Kayıt Ol";
}

@* ════════════════════════════════════════════════════════════════════════════
   REGISTER PAGE (MODERN GLASSMORPHISM V4 - ENHANCED LIGHT MODE & ANIMATIONS)
   ════════════════════════════════════════════════════════════════════════════
   Mimar Notu: 
   - İkonlara 'group-hover:animate-bounce' efekti geri eklendi.
   - Light Mode için özel "Dot Pattern" ve "Subtle Gradient" arka planı oluşturuldu.
   - Peer tabanlı floating label yapısı korundu.
*@

<style>
    /* Autofill Hack */
    input:-webkit-autofill,
    input:-webkit-autofill:hover,
    input:-webkit-autofill:focus,
    input:-webkit-autofill:active {
        -webkit-box-shadow: 0 0 0 30px rgba(255, 255, 255, 0) inset !important;
        -webkit-text-fill-color: inherit !important;
        transition: background-color 5000s ease-in-out 0s;
    }

    /* Light Mode Dot Pattern (Sadece Light modda görünür) */
    .bg-dot-pattern {
        background-image: radial-gradient(#e5e7eb 1px, transparent 1px);
        background-size: 24px 24px;
    }

    /* Dark Mode'da deseni gizle veya rengini değiştir */
    .dark .bg-dot-pattern {
        background-image: none;
    }
</style>

<div class="relative min-h-[calc(100vh-5rem)] flex items-center justify-center overflow-hidden py-12 px-4 sm:px-6 lg:px-8 bg-gray-50/50 dark:bg-transparent">

    <!-- Arka Plan Efektleri -->
    <div class="absolute inset-0 z-0 pointer-events-none">

        <!-- Light Mode: Dot Pattern ve Hafif Mesh Gradient -->
        <div class="absolute inset-0 bg-dot-pattern opacity-60 dark:opacity-0 transition-opacity duration-500"></div>
        <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-br from-indigo-50/40 via-white/10 to-cyan-50/40 dark:from-transparent dark:to-transparent opacity-80"></div>

        <!-- Blob Efektleri (Hem Dark Hem Light Modda Derinlik Katar) -->
        <div class="absolute top-[-10%] left-[-10%] w-96 h-96 bg-accent-500/20 rounded-full mix-blend-multiply dark:mix-blend-screen filter blur-[90px] animate-blob"></div>
        <div class="absolute bottom-[-10%] right-[-10%] w-96 h-96 bg-petrol-500/20 rounded-full mix-blend-multiply dark:mix-blend-screen filter blur-[90px] animate-blob" style="animation-delay: 2s"></div>

        <!-- Noise Texture -->
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-full h-full bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-10"></div>
    </div>

    <!-- Register Card Container -->
    <div class="relative w-full max-w-lg z-10 animate__animated animate__fadeInUp group">

        <!-- Glass Card -->
        <div class="bg-white/80 dark:bg-petrol-950/80 backdrop-blur-2xl rounded-3xl shadow-2xl border border-white/60 dark:border-petrol-700/50 p-8 sm:p-10 relative overflow-hidden transition-all duration-500 hover:shadow-accent-500/10 hover:border-accent-500/30">

            <!-- Header -->
            <div class="text-center mb-8">
                <!-- İkon: Hover'da Zıplama Efekti (animate-bounce) -->
                <div class="inline-flex items-center justify-center w-20 h-20 rounded-2xl bg-gradient-to-tr from-accent-500 to-orange-400 shadow-lg shadow-accent-500/30 mb-6 transition-transform duration-500 group-hover:scale-110 group-hover:rotate-3 group-hover:animate-bounce">
                    <i class="fas fa-rocket text-3xl text-white"></i>
                </div>
                <h2 class="text-3xl font-extrabold tracking-tight">
                    <span class="bg-clip-text text-transparent bg-gradient-to-r from-gray-900 via-petrol-800 to-gray-900 dark:from-white dark:via-gray-200 dark:to-white">
                        Aramıza Katılın
                    </span>
                </h2>
                <p class="mt-2 text-sm text-gray-600 dark:text-gray-400 font-medium">
                    Geleceğin projelerini tasarlamak için ilk adımı atın.
                </p>
            </div>

            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="space-y-6">
                <div asp-validation-summary="ModelOnly" class="text-accent-600 text-sm font-bold text-center bg-accent-50 dark:bg-accent-900/10 p-3 rounded-xl border border-accent-100 dark:border-accent-900/20 animate__animated animate__shakeX" role="alert"></div>

                <!-- Email Input -->
                <div class="relative">
                    <input asp-for="Input.Email"
                           id="floating_email"
                           class="block px-2.5 pb-2.5 pt-5 w-full text-sm text-gray-900 bg-gray-50/50 dark:bg-petrol-900/50 rounded-xl border border-gray-300 dark:border-petrol-600 appearance-none dark:text-white focus:outline-none focus:ring-0 focus:border-accent-500 focus:bg-white dark:focus:bg-petrol-900 peer pl-11 transition-all duration-200"
                           placeholder=" "
                           autocomplete="username" />

                    <div class="absolute inset-y-0 left-0 flex items-center pl-4 pointer-events-none">
                        <i class="fas fa-envelope text-gray-400 peer-focus:text-accent-500 transition-colors duration-200"></i>
                    </div>

                    <label for="floating_email"
                           class="absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-4 scale-75 top-4 z-10 origin-[0] left-11 peer-focus:text-accent-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-placeholder-shown:top-3.5 peer-focus:scale-75 peer-focus:-translate-y-4 font-medium pointer-events-none">
                        E-posta Adresi
                    </label>
                    <span asp-validation-for="Input.Email" class="text-red-500 text-xs mt-1 block font-bold ml-1"></span>
                </div>

                <!-- Password Inputs Grid -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-5">

                    <!-- Password -->
                    <div class="relative">
                        <input asp-for="Input.Password"
                               id="floating_password"
                               class="block px-2.5 pb-2.5 pt-5 w-full text-sm text-gray-900 bg-gray-50/50 dark:bg-petrol-900/50 rounded-xl border border-gray-300 dark:border-petrol-600 appearance-none dark:text-white focus:outline-none focus:ring-0 focus:border-accent-500 focus:bg-white dark:focus:bg-petrol-900 peer pl-11 transition-all duration-200"
                               placeholder=" "
                               autocomplete="new-password" />

                        <div class="absolute inset-y-0 left-0 flex items-center pl-4 pointer-events-none">
                            <i class="fas fa-lock text-gray-400 peer-focus:text-accent-500 transition-colors duration-200"></i>
                        </div>

                        <label for="floating_password"
                               class="absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-4 scale-75 top-4 z-10 origin-[0] left-11 peer-focus:text-accent-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-placeholder-shown:top-3.5 peer-focus:scale-75 peer-focus:-translate-y-4 font-medium pointer-events-none">
                            Şifre
                        </label>
                        <span asp-validation-for="Input.Password" class="text-red-500 text-xs mt-1 block font-bold ml-1"></span>
                    </div>

                    <!-- Confirm Password -->
                    <div class="relative">
                        <input asp-for="Input.ConfirmPassword"
                               id="floating_confirm_password"
                               class="block px-2.5 pb-2.5 pt-5 w-full text-sm text-gray-900 bg-gray-50/50 dark:bg-petrol-900/50 rounded-xl border border-gray-300 dark:border-petrol-600 appearance-none dark:text-white focus:outline-none focus:ring-0 focus:border-accent-500 focus:bg-white dark:focus:bg-petrol-900 peer pl-11 transition-all duration-200"
                               placeholder=" "
                               autocomplete="new-password" />

                        <div class="absolute inset-y-0 left-0 flex items-center pl-4 pointer-events-none">
                            <i class="fas fa-check-circle text-gray-400 peer-focus:text-accent-500 transition-colors duration-200"></i>
                        </div>

                        <label for="floating_confirm_password"
                               class="absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-4 scale-75 top-4 z-10 origin-[0] left-11 peer-focus:text-accent-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-placeholder-shown:top-3.5 peer-focus:scale-75 peer-focus:-translate-y-4 font-medium pointer-events-none">
                            Şifre Tekrar
                        </label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-red-500 text-xs mt-1 block font-bold ml-1"></span>
                    </div>
                </div>

                <!-- Terms -->
                <div class="flex items-start pl-1">
                    <div class="flex items-center h-5">
                        <input id="terms" name="terms" type="checkbox" required class="w-5 h-5 text-accent-500 bg-gray-100 border-gray-300 rounded focus:ring-accent-500 dark:focus:ring-accent-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600 cursor-pointer transition-all">
                    </div>
                    <div class="ml-3 text-xs leading-relaxed">
                        <label for="terms" class="font-medium text-gray-600 dark:text-gray-300">
                            Hesap oluşturarak <a href="#" class="text-accent-500 hover:text-accent-600 font-bold hover:underline">Kullanım Koşulları</a>'nı ve <a href="#" class="text-accent-500 hover:text-accent-600 font-bold hover:underline">Gizlilik Politikası</a>'nı kabul ediyorum.
                        </label>
                    </div>
                </div>

                <!-- Submit Button -->
                <button id="registerSubmit" type="submit" class="group relative w-full flex justify-center py-4 px-4 border border-transparent text-sm font-bold rounded-xl text-white bg-gradient-to-r from-accent-500 to-orange-600 hover:from-accent-600 hover:to-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent-500 shadow-lg shadow-accent-500/30 hover:shadow-xl hover:shadow-accent-500/40 hover:-translate-y-1 transition-all duration-300 overflow-hidden">
                    <span class="absolute left-0 inset-y-0 flex items-center pl-4">
                        <i class="fas fa-rocket text-lg group-hover:rotate-12 transition-transform duration-300"></i>
                    </span>
                    Kayıt İşlemini Tamamla
                    <div class="absolute inset-0 bg-white/20 group-hover:translate-x-full transition-transform duration-500 ease-in-out -skew-x-12 -translate-x-full"></div>
                </button>

                <!-- Divider -->
                <div class="relative my-6">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-200 dark:border-petrol-700"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-4 bg-white dark:bg-petrol-950/80 text-gray-500 dark:text-gray-400 rounded-full font-medium shadow-sm">Zaten üye misiniz?</span>
                    </div>
                </div>

                <!-- Login Redirect -->
                <div class="text-center">
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="w-full inline-flex justify-center items-center py-3.5 px-4 border border-gray-200 dark:border-petrol-600 rounded-xl shadow-sm bg-gray-50 dark:bg-petrol-800/50 text-sm font-bold text-petrol-700 dark:text-gray-200 hover:bg-white dark:hover:bg-petrol-700 hover:border-accent-300 dark:hover:border-accent-500/50 transition-all hover:-translate-y-0.5 group/login">
                        <i class="fas fa-sign-in-alt mr-2 group-hover/login:translate-x-1 transition-transform"></i> Giriş Yapın
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}