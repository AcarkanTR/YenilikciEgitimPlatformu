@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Şifre Değiştir";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
    Layout = "_Layout";
}

<div class="max-w-2xl">
    <div class="mb-6">
        <h3 class="text-2xl font-bold text-gray-900 dark:text-white flex items-center gap-2">
            <i class="fas fa-key text-accent-500"></i> @ViewData["Title"]
        </h3>
        <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Hesabınızın güvenliği için güçlü bir şifre kullanın.</p>
    </div>

    <partial name="_StatusMessage" for="StatusMessage" />

    <form id="change-password-form" method="post" class="space-y-6 mt-6">
        <div asp-validation-summary="ModelOnly" class="text-accent-600 text-sm font-bold bg-accent-50 dark:bg-accent-900/10 p-3 rounded-xl border border-accent-100 dark:border-accent-900/20" role="alert"></div>

        <!-- Mevcut Şifre -->
        <div class="relative group">
            <input asp-for="Input.OldPassword" class="peer block px-2.5 pb-2.5 pt-5 w-full text-sm text-gray-900 bg-gray-50/50 dark:bg-petrol-900/50 rounded-xl border border-gray-300 dark:border-petrol-600 appearance-none dark:text-white focus:outline-none focus:ring-0 focus:border-accent-500 focus:bg-white dark:focus:bg-petrol-900 transition-all" placeholder=" " autocomplete="current-password" />
            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                <i class="fas fa-lock text-gray-400 peer-focus:text-accent-500 transition-colors"></i>
            </div>
            <label asp-for="Input.OldPassword" class="absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-4 scale-75 top-4 z-10 origin-[0] left-10 peer-focus:text-accent-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-placeholder-shown:top-3.5 peer-focus:scale-75 peer-focus:-translate-y-4 font-medium pointer-events-none">Mevcut Şifre</label>
            <span asp-validation-for="Input.OldPassword" class="text-red-500 text-xs mt-1 block pl-2 font-medium"></span>
        </div>

        <!-- Yeni Şifre -->
        <div class="relative group">
            <input asp-for="Input.NewPassword" class="peer block px-2.5 pb-2.5 pt-5 w-full text-sm text-gray-900 bg-gray-50/50 dark:bg-petrol-900/50 rounded-xl border border-gray-300 dark:border-petrol-600 appearance-none dark:text-white focus:outline-none focus:ring-0 focus:border-accent-500 focus:bg-white dark:focus:bg-petrol-900 transition-all" placeholder=" " autocomplete="new-password" />
            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                <i class="fas fa-key text-gray-400 peer-focus:text-accent-500 transition-colors"></i>
            </div>
            <label asp-for="Input.NewPassword" class="absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-4 scale-75 top-4 z-10 origin-[0] left-10 peer-focus:text-accent-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-placeholder-shown:top-3.5 peer-focus:scale-75 peer-focus:-translate-y-4 font-medium pointer-events-none">Yeni Şifre</label>
            <span asp-validation-for="Input.NewPassword" class="text-red-500 text-xs mt-1 block pl-2 font-medium"></span>
        </div>

        <!-- Yeni Şifre Tekrar -->
        <div class="relative group">
            <input asp-for="Input.ConfirmPassword" class="peer block px-2.5 pb-2.5 pt-5 w-full text-sm text-gray-900 bg-gray-50/50 dark:bg-petrol-900/50 rounded-xl border border-gray-300 dark:border-petrol-600 appearance-none dark:text-white focus:outline-none focus:ring-0 focus:border-accent-500 focus:bg-white dark:focus:bg-petrol-900 transition-all" placeholder=" " autocomplete="new-password" />
            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                <i class="fas fa-check-circle text-gray-400 peer-focus:text-accent-500 transition-colors"></i>
            </div>
            <label asp-for="Input.ConfirmPassword" class="absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-4 scale-75 top-4 z-10 origin-[0] left-10 peer-focus:text-accent-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-placeholder-shown:top-3.5 peer-focus:scale-75 peer-focus:-translate-y-4 font-medium pointer-events-none">Yeni Şifre Tekrar</label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-red-500 text-xs mt-1 block pl-2 font-medium"></span>
        </div>

        <button type="submit" class="group relative w-full sm:w-auto flex justify-center py-3 px-6 border border-transparent text-sm font-bold rounded-xl text-white bg-gradient-to-r from-accent-500 to-accent-600 hover:from-accent-600 hover:to-accent-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent-500 shadow-lg shadow-accent-500/30 hover:shadow-xl hover:-translate-y-0.5 transition-all duration-300">
            <span class="flex items-center gap-2">
                <i class="fas fa-save group-hover:rotate-12 transition-transform"></i>
                Şifreyi Güncelle
            </span>
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}