@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Hesabı Sil";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
    Layout = "_Layout";
}

<div class="max-w-2xl">
    <div class="mb-6">
        <h3 class="text-2xl font-bold text-red-600 dark:text-red-500 flex items-center gap-2">
            <i class="fas fa-exclamation-triangle"></i> @ViewData["Title"]
        </h3>
    </div>

    <div class="bg-red-50 dark:bg-red-900/10 border border-red-200 dark:border-red-800 rounded-xl p-6 mb-8 animate__animated animate__pulse">
        <div class="flex items-start">
            <div class="flex-shrink-0">
                <i class="fas fa-ban text-red-500 text-xl mt-1"></i>
            </div>
            <div class="ml-3">
                <h3 class="text-sm font-bold text-red-800 dark:text-red-200">Dikkat: Bu işlem geri alınamaz!</h3>
                <div class="mt-2 text-sm text-red-700 dark:text-red-300">
                    <p>Hesabınızı sildiğinizde tüm kişisel verileriniz, projeleriniz ve kayıtlarınız kalıcı olarak silinecektir. Lütfen emin olmadan devam etmeyin.</p>
                </div>
            </div>
        </div>
    </div>

    <form id="delete-user" method="post" class="space-y-6">
        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm font-bold text-center" role="alert"></div>

        @if (Model.RequirePassword)
        {
            <div class="relative group">
                <input asp-for="Input.Password" class="peer block px-2.5 pb-2.5 pt-5 w-full text-sm text-gray-900 bg-gray-50/50 dark:bg-petrol-900/50 rounded-xl border border-gray-300 dark:border-petrol-600 appearance-none dark:text-white focus:outline-none focus:ring-0 focus:border-red-500 focus:bg-white dark:focus:bg-petrol-900 transition-all" placeholder=" " autocomplete="current-password" />
                <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                    <i class="fas fa-lock text-gray-400 peer-focus:text-red-500 transition-colors"></i>
                </div>
                <label asp-for="Input.Password" class="absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-4 scale-75 top-4 z-10 origin-[0] left-10 peer-focus:text-red-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-placeholder-shown:top-3.5 peer-focus:scale-75 peer-focus:-translate-y-4 font-medium pointer-events-none">Onay için Şifrenizi Girin</label>
                <span asp-validation-for="Input.Password" class="text-red-500 text-xs mt-1 block pl-2 font-medium"></span>
            </div>
        }

        <button type="submit" class="w-full sm:w-auto flex justify-center items-center gap-2 py-3 px-6 border border-transparent text-sm font-bold rounded-xl text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 shadow-lg hover:shadow-red-500/30 transition-all hover:-translate-y-0.5">
            <i class="fas fa-trash-alt"></i>
            Hesabı Kalıcı Olarak Sil
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}