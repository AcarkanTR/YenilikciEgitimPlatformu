@page
@model DownloadPersonalDataModel
@{
    ViewData["Title"] = "Verilerimi İndir";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="max-w-2xl">
    <div class="mb-6">
        <h3 class="text-2xl font-bold text-gray-900 dark:text-white flex items-center gap-2">
            <i class="fas fa-download text-accent-500"></i> @ViewData["Title"]
        </h3>
        <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Hesabınıza ait kişisel verileri JSON formatında indirebilirsiniz.</p>
    </div>

    <div class="bg-blue-50 dark:bg-blue-900/10 border border-blue-200 dark:border-blue-800 rounded-xl p-6 mb-8">
        <div class="flex items-center gap-4">
            <div class="p-3 bg-blue-100 dark:bg-blue-900/30 rounded-lg text-blue-600 dark:text-blue-400">
                <i class="fas fa-file-code text-2xl"></i>
            </div>
            <div>
                <h4 class="font-bold text-gray-900 dark:text-white">Kişisel Veri Arşivi</h4>
                <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Oluşturulacak dosya hassas bilgiler içerebilir. Lütfen güvenli bir yerde saklayın.</p>
            </div>
        </div>
    </div>

    <form method="post">
        <button type="submit" class="group w-full sm:w-auto flex justify-center items-center gap-2 py-3 px-6 border border-transparent text-sm font-bold rounded-xl text-white bg-gradient-to-r from-petrol-600 to-petrol-700 hover:from-petrol-700 hover:to-petrol-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-petrol-500 shadow-lg transition-all hover:-translate-y-0.5">
            <i class="fas fa-cloud-download-alt group-hover:animate-bounce"></i>
            Verileri İndir (JSON)
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}