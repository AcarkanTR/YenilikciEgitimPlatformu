@page
@model IndexModel
@{
    ViewData["Title"] = "Profil Bilgileri";
    ViewData["ActivePage"] = ManageNavPages.Index;
    Layout = "_Layout";
}

<!-- Düzeltme: 'mx-auto w-full' eklenerek kartın ortalanması garanti edildi -->
<div class="max-w-2xl w-full mx-auto">
    <div class="mb-6">
        <h3 class="text-2xl font-bold text-gray-900 dark:text-white flex items-center gap-2">
            <i class="fas fa-id-card text-accent-500"></i> @ViewData["Title"]
        </h3>
        <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Kullanıcı adı ve telefon numaranızı buradan güncelleyebilirsiniz.</p>
    </div>

    <partial name="_StatusMessage" for="StatusMessage" />

    <form id="profile-form" method="post" class="space-y-6 mt-6">
        <div asp-validation-summary="ModelOnly" class="text-accent-600 text-sm font-bold bg-accent-50 dark:bg-accent-900/10 p-3 rounded-xl border border-accent-100 dark:border-accent-900/20" role="alert"></div>

        <!-- Kullanıcı Adı (Disabled) -->
        <div class="relative group">
            <input asp-for="Username" class="peer block px-2.5 pb-2.5 pt-5 w-full text-sm text-gray-900 bg-gray-100 dark:bg-petrol-900/30 rounded-xl border border-gray-200 dark:border-petrol-700 cursor-not-allowed" placeholder=" " disabled />
            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                <i class="fas fa-user text-gray-400"></i>
            </div>
            <label asp-for="Username" class="absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-4 scale-75 top-4 z-10 origin-[0] left-10 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-placeholder-shown:top-3.5 peer-focus:scale-75 peer-focus:-translate-y-4 font-medium">Kullanıcı Adı</label>
        </div>

        <!-- Telefon Numarası -->
        <div class="relative group">
            <input asp-for="Input.PhoneNumber" class="peer block px-2.5 pb-2.5 pt-5 w-full text-sm text-gray-900 bg-gray-50/50 dark:bg-petrol-900/50 rounded-xl border border-gray-300 dark:border-petrol-600 appearance-none dark:text-white focus:outline-none focus:ring-0 focus:border-accent-500 focus:bg-white dark:focus:bg-petrol-900 transition-all" placeholder=" " />
            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                <i class="fas fa-phone text-gray-400 peer-focus:text-accent-500 transition-colors"></i>
            </div>
            <label asp-for="Input.PhoneNumber" class="absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-4 scale-75 top-4 z-10 origin-[0] left-10 peer-focus:text-accent-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-placeholder-shown:top-3.5 peer-focus:scale-75 peer-focus:-translate-y-4 font-medium pointer-events-none">Telefon Numarası</label>
            <span asp-validation-for="Input.PhoneNumber" class="text-red-500 text-xs mt-1 block pl-2 font-medium"></span>
        </div>

        <button id="update-profile-button" type="submit" class="group relative w-full sm:w-auto flex justify-center py-3 px-6 border border-transparent text-sm font-bold rounded-xl text-white bg-gradient-to-r from-petrol-600 to-petrol-700 hover:from-petrol-700 hover:to-petrol-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-petrol-500 shadow-lg shadow-petrol-500/30 hover:shadow-xl hover:-translate-y-0.5 transition-all duration-300">
            <span class="flex items-center gap-2">
                <i class="fas fa-save group-hover:scale-110 transition-transform"></i>
                Değişiklikleri Kaydet
            </span>
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}