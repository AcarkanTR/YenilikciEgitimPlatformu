@page
@model ConfirmEmailChangeModel
@{
    ViewData["Title"] = "E-posta Değişikliğini Onayla";
}

<style>
    .bg-dot-pattern {
        background-image: radial-gradient(#e5e7eb 1px, transparent 1px);
        background-size: 24px 24px;
    }

    .dark .bg-dot-pattern {
        background-image: none;
    }
</style>

<div class="relative min-h-[calc(100vh-5rem)] flex items-center justify-center overflow-hidden py-12 px-4 sm:px-6 lg:px-8 bg-gray-50/50 dark:bg-transparent">

    <div class="absolute inset-0 z-0 pointer-events-none">
        <div class="absolute inset-0 bg-dot-pattern opacity-60 dark:opacity-0"></div>
        <div class="absolute bottom-0 left-0 w-96 h-96 bg-teal-500/20 rounded-full mix-blend-multiply dark:mix-blend-screen filter blur-[90px] animate-blob"></div>
    </div>

    <div class="relative w-full max-w-md z-10 animate__animated animate__fadeInUp group">
        <div class="bg-white/80 dark:bg-petrol-950/80 backdrop-blur-2xl rounded-3xl shadow-2xl border border-white/60 dark:border-petrol-700/50 p-8 text-center relative overflow-hidden">

            <div class="mx-auto h-20 w-20 bg-gradient-to-tr from-teal-400 to-emerald-600 rounded-2xl flex items-center justify-center shadow-lg mb-6 group-hover:scale-110 group-hover:rotate-3 transition-transform duration-500">
                <i class="fas fa-exchange-alt text-3xl text-white"></i>
            </div>

            <h1 class="text-2xl font-extrabold text-gray-900 dark:text-white mb-6">
                @ViewData["Title"]
            </h1>

            <partial name="_StatusMessage" model="Model.StatusMessage" />

            <div class="mt-8">
                <a href="/Account/Login" class="inline-flex justify-center items-center py-3 px-6 border border-transparent text-sm font-bold rounded-xl text-white bg-teal-600 hover:bg-teal-700 shadow-lg hover:shadow-teal-500/30 transition-all hover:-translate-y-1 w-full">
                    Giriş Yap
                </a>
            </div>
        </div>
    </div>
</div>