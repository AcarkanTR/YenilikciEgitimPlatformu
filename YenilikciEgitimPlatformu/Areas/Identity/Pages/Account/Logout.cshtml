@page
@model LogoutModel
@{
    ViewData["Title"] = "Çıkış Yap";
}

<style>
    .bg-dot-pattern {
        background-image: radial-gradient(#e5e7eb 1px, transparent 1px);
        background-size: 24px 24px;
    }

    .dark .bg-dot-pattern {
        background-image: none;
    }
</style>

<div class="relative min-h-[calc(100vh-5rem)] flex items-center justify-center overflow-hidden py-12 px-4 sm:px-6 lg:px-8 bg-gray-50/50 dark:bg-transparent">

    <div class="absolute inset-0 z-0 pointer-events-none">
        <div class="absolute inset-0 bg-dot-pattern opacity-60 dark:opacity-0"></div>
        <div class="absolute bottom-[-10%] left-1/2 transform -translate-x-1/2 w-96 h-96 bg-gray-500/20 rounded-full mix-blend-multiply dark:mix-blend-screen filter blur-[90px] animate-blob"></div>
    </div>

    <div class="relative w-full max-w-md z-10 animate__animated animate__fadeIn group">
        <div class="bg-white/80 dark:bg-petrol-950/80 backdrop-blur-2xl rounded-3xl shadow-2xl border border-white/60 dark:border-petrol-700/50 p-8 text-center relative overflow-hidden">

            <div class="mx-auto h-24 w-24 bg-gradient-to-br from-gray-400 to-gray-600 rounded-full flex items-center justify-center shadow-lg mb-6 group-hover:scale-110 transition-transform duration-500">
                <i class="fas fa-power-off text-4xl text-white"></i>
            </div>

            <h1 class="text-3xl font-extrabold text-gray-900 dark:text-white mb-4">
                @ViewData["Title"]
            </h1>

            @{
                if (User.Identity?.IsAuthenticated ?? false)
                {
                    <p class="text-gray-600 dark:text-gray-300 mb-8 font-medium">
                        Oturumunuzu sonlandırmak üzeresiniz.
                    </p>
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                        <button type="submit" class="inline-flex justify-center items-center py-3 px-8 border border-transparent text-sm font-bold rounded-xl text-white bg-red-600 hover:bg-red-700 shadow-lg hover:shadow-red-500/30 transition-all hover:-translate-y-1 w-full">
                            <i class="fas fa-sign-out-alt mr-2"></i> Çıkışı Onayla
                        </button>
                    </form>
                }
                else
                {
                    <p class="text-gray-600 dark:text-gray-300 mb-8 font-medium leading-relaxed">
                        Başarıyla çıkış yaptınız. Sizi tekrar aramızda görmek için sabırsızlanıyoruz!
                    </p>
                    <a href="/" class="inline-flex justify-center items-center py-3 px-8 border border-transparent text-sm font-bold rounded-xl text-white bg-petrol-600 hover:bg-petrol-700 shadow-lg hover:shadow-petrol-500/30 transition-all hover:-translate-y-1 w-full">
                        <i class="fas fa-home mr-2"></i> Ana Sayfaya Dön
                    </a>
                }
            }
        </div>
    </div>
</div>