@page
@model IndexModel
@{
    ViewData["Title"] = "Ana Sayfa";
}

@* ════════════════════════════════════════════════════════════════════════════
   HERO SECTION
   ════════════════════════════════════════════════════════════════════════════
*@
<section class="relative min-h-[85vh] flex items-center justify-center overflow-hidden bg-petrol-900 pt-16 lg:pt-0">
    <!-- Arka Plan Efektleri -->
    <div class="absolute inset-0 z-0">
        <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-br from-petrol-900 via-petrol-950 to-petrol-900 opacity-98"></div>
        <div class="absolute inset-0 opacity-[0.15]" style="background-image: radial-gradient(#ffffff 1.5px, transparent 1.5px); background-size: 32px 32px;"></div>
        <div class="absolute top-[-10%] right-[-5%] w-[600px] h-[600px] bg-accent-500 rounded-full mix-blend-screen filter blur-[100px] opacity-10 animate-blob"></div>
        <div class="absolute bottom-[-10%] left-[-10%] w-[700px] h-[700px] bg-petrol-600 rounded-full mix-blend-screen filter blur-[120px] opacity-20 animate-blob" style="animation-delay: 2s"></div>
        <div class="absolute top-20 right-20 w-40 h-40 bg-yellow-400 rounded-full blur-[90px] opacity-50 animate-pulse-slow z-0"></div>
    </div>

    <div class="relative z-10 container mx-auto px-4 text-center space-y-8 animate__animated animate__fadeInUp">

        <div class="inline-flex items-center gap-3 px-4 py-2 rounded-full bg-petrol-800/50 backdrop-blur-md border border-white/10 text-white text-sm font-medium hover:bg-petrol-800/70 transition-colors cursor-default animate__animated animate__fadeInDown animate__delay-1s shadow-lg ring-1 ring-white/5">
            <span class="flex h-2 w-2 relative">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-accent-400 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-2 w-2 bg-accent-500"></span>
            </span>
            <span>Platform v1.0 Yayında</span>
        </div>

        <h1 class="text-5xl md:text-7xl lg:text-8xl font-extrabold text-white leading-tight tracking-tight drop-shadow-2xl">
            Geleceği <span class="text-transparent bg-clip-text bg-gradient-to-r from-accent-400 to-yellow-400 drop-shadow-lg">Birlikte Tasarla</span>
        </h1>

        <p class="text-lg md:text-xl text-petrol-100 max-w-3xl mx-auto font-light leading-relaxed">
            Türkiye'nin en kapsamlı eğitim projeleri ve hibe platformu.
            <span class="text-white font-medium">TÜBİTAK, Erasmus+ ve TEKNOFEST</span> fırsatlarını tek çatı altında keşfet.
        </p>

        <div class="flex flex-col sm:flex-row justify-center gap-5 pt-6">
            <a asp-page="/CagriBilgileri/Index" class="group relative px-8 py-5 bg-accent-500 hover:bg-accent-600 text-white rounded-2xl font-bold shadow-xl shadow-accent-500/30 transition-all hover:-translate-y-1 overflow-hidden">
                <div class="absolute inset-0 bg-white/20 group-hover:translate-x-full transition-transform duration-500 ease-in-out -skew-x-12 -translate-x-full"></div>
                <span class="relative z-10 flex items-center gap-3">
                    <i class="fas fa-search text-xl group-hover:rotate-12 transition-transform"></i>
                    <span class="text-lg">Fırsatları Keşfet</span>
                </span>
            </a>
            <a asp-page="/Account/Register" class="px-8 py-5 bg-white/5 text-white border border-white/10 rounded-2xl font-bold backdrop-blur-md hover:bg-white/10 hover:border-white/30 transition-all flex items-center justify-center gap-3 shadow-lg group">
                <i class="fas fa-user-plus text-xl text-petrol-300 group-hover:text-white transition-colors group-hover:scale-110 transform duration-300"></i>
                <span class="text-lg">Hemen Katıl</span>
            </a>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mt-16 p-8 rounded-3xl bg-petrol-900/60 backdrop-blur-lg border border-white/10 shadow-2xl max-w-6xl mx-auto animate__animated animate__fadeInUp animate__delay-1s transform hover:scale-[1.01] transition-transform">
            <div class="text-center group p-2">
                <div class="mb-3 text-accent-400 text-3xl opacity-80 group-hover:scale-110 transition-transform"><i class="fas fa-rocket"></i></div>
                <div class="text-3xl md:text-4xl font-bold text-white mb-1">@Model.ToplamProje</div>
                <div class="text-xs text-gray-400 uppercase tracking-widest font-semibold">Aktif Proje</div>
            </div>
            <div class="text-center group p-2 border-l border-white/5">
                <div class="mb-3 text-accent-400 text-3xl opacity-80 group-hover:scale-110 transition-transform"><i class="fas fa-bullhorn"></i></div>
                <div class="text-3xl md:text-4xl font-bold text-white mb-1">@Model.ToplamCagri</div>
                <div class="text-xs text-gray-400 uppercase tracking-widest font-semibold">Açık Çağrı</div>
            </div>
            <div class="text-center group p-2 border-l border-white/5">
                <div class="mb-3 text-accent-400 text-3xl opacity-80 group-hover:scale-110 transition-transform"><i class="fas fa-school"></i></div>
                <div class="text-3xl md:text-4xl font-bold text-white mb-1">@Model.ToplamOkul</div>
                <div class="text-xs text-gray-400 uppercase tracking-widest font-semibold">Kayıtlı Okul</div>
            </div>
            <div class="text-center group p-2 border-l border-white/5">
                <div class="mb-3 text-accent-400 text-3xl opacity-80 group-hover:scale-110 transition-transform"><i class="fas fa-users"></i></div>
                <div class="text-3xl md:text-4xl font-bold text-white mb-1">@Model.ToplamKullanici</div>
                <div class="text-xs text-gray-400 uppercase tracking-widest font-semibold">Mutlu Üye</div>
            </div>
        </div>
    </div>
</section>

<!-- GRADIENT SEPARATOR -->
<div class="h-[2px] w-full bg-gradient-to-r from-transparent via-petrol-500 to-transparent opacity-80"></div>

@* ════════════════════════════════════════════════════════════════════════════
   INFO CARDS (Neden Bu Platform?) - Modern Feature Grid
   ════════════════════════════════════════════════════════════════════════════
*@
<section class="py-24 bg-gray-50 dark:bg-petrol-900 relative z-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold text-petrol-800 dark:text-white mb-4">Neden Bu Platform?</h2>
            <div class="w-24 h-1.5 bg-accent-500 mx-auto rounded-full"></div>
            <p class="mt-4 text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">Sadece bir proje havuzu değil, aynı zamanda canlı bir eğitim ekosistemi.</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-8">

            <!-- Kart 1: Tek Noktadan Erişim -->
            <div class="group relative bg-white dark:bg-petrol-950 p-8 rounded-3xl border border-gray-100 dark:border-petrol-800 hover:border-accent-500/50 dark:hover:border-accent-500/50 shadow-lg hover:shadow-2xl hover:shadow-accent-500/10 transition-all duration-300 hover:-translate-y-2 flex flex-col items-center text-center h-full">
                <div class="w-16 h-16 bg-petrol-50 dark:bg-petrol-900 rounded-2xl flex items-center justify-center text-petrol-600 dark:text-accent-500 mb-6 text-2xl shadow-sm group-hover:scale-110 group-hover:bg-accent-500 group-hover:text-white transition-all duration-300">
                    <i class="fas fa-globe"></i>
                </div>
                <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-3 group-hover:text-accent-500 transition-colors">Tek Noktadan Erişim</h3>
                <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed">
                    Ulusal ve uluslararası tüm hibe programları ve yarışmalar tek platformda.
                </p>
                <div class="mt-auto pt-4 w-full">
                    <div class="h-1 w-12 bg-gray-100 dark:bg-petrol-800 mx-auto rounded-full group-hover:w-24 group-hover:bg-accent-500 transition-all duration-300"></div>
                </div>
            </div>

            <!-- Kart 2: Yapay Zeka -->
            <div class="group relative bg-white dark:bg-petrol-950 p-8 rounded-3xl border border-gray-100 dark:border-petrol-800 hover:border-accent-500/50 dark:hover:border-accent-500/50 shadow-lg hover:shadow-2xl hover:shadow-accent-500/10 transition-all duration-300 hover:-translate-y-2 flex flex-col items-center text-center h-full">
                <div class="w-16 h-16 bg-petrol-50 dark:bg-petrol-900 rounded-2xl flex items-center justify-center text-petrol-600 dark:text-accent-500 mb-6 text-2xl shadow-sm group-hover:scale-110 group-hover:bg-accent-500 group-hover:text-white transition-all duration-300">
                    <i class="fas fa-brain"></i>
                </div>
                <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-3 group-hover:text-accent-500 transition-colors">Yapay Zeka Destekli</h3>
                <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed">
                    Size en uygun partnerleri ve projeleri öneren akıllı algoritmalar.
                </p>
                <div class="mt-auto pt-4 w-full">
                    <div class="h-1 w-12 bg-gray-100 dark:bg-petrol-800 mx-auto rounded-full group-hover:w-24 group-hover:bg-accent-500 transition-all duration-300"></div>
                </div>
            </div>

            <!-- Kart 3: Güçlü Topluluk -->
            <div class="group relative bg-white dark:bg-petrol-950 p-8 rounded-3xl border border-gray-100 dark:border-petrol-800 hover:border-accent-500/50 dark:hover:border-accent-500/50 shadow-lg hover:shadow-2xl hover:shadow-accent-500/10 transition-all duration-300 hover:-translate-y-2 flex flex-col items-center text-center h-full">
                <div class="w-16 h-16 bg-petrol-50 dark:bg-petrol-900 rounded-2xl flex items-center justify-center text-petrol-600 dark:text-accent-500 mb-6 text-2xl shadow-sm group-hover:scale-110 group-hover:bg-accent-500 group-hover:text-white transition-all duration-300">
                    <i class="fas fa-users"></i>
                </div>
                <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-3 group-hover:text-accent-500 transition-colors">Güçlü Topluluk</h3>
                <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed">
                    Binlerce eğitimci ile fikir alışverişi yapın ve ağınızı genişletin.
                </p>
                <div class="mt-auto pt-4 w-full">
                    <div class="h-1 w-12 bg-gray-100 dark:bg-petrol-800 mx-auto rounded-full group-hover:w-24 group-hover:bg-accent-500 transition-all duration-300"></div>
                </div>
            </div>

            <!-- Kart 4: Kariyer & Gelişim -->
            <div class="group relative bg-white dark:bg-petrol-950 p-8 rounded-3xl border border-gray-100 dark:border-petrol-800 hover:border-accent-500/50 dark:hover:border-accent-500/50 shadow-lg hover:shadow-2xl hover:shadow-accent-500/10 transition-all duration-300 hover:-translate-y-2 flex flex-col items-center text-center h-full">
                <div class="w-16 h-16 bg-petrol-50 dark:bg-petrol-900 rounded-2xl flex items-center justify-center text-petrol-600 dark:text-accent-500 mb-6 text-2xl shadow-sm group-hover:scale-110 group-hover:bg-accent-500 group-hover:text-white transition-all duration-300">
                    <i class="fas fa-chart-line"></i>
                </div>
                <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-3 group-hover:text-accent-500 transition-colors">Kariyer & Gelişim</h3>
                <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed">
                    Projelerinizle başarı rozetleri kazanın, profilinizi güçlendirin.
                </p>
                <div class="mt-auto pt-4 w-full">
                    <div class="h-1 w-12 bg-gray-100 dark:bg-petrol-800 mx-auto rounded-full group-hover:w-24 group-hover:bg-accent-500 transition-all duration-300"></div>
                </div>
            </div>

        </div>
    </div>
</section>

<!-- GRADIENT SEPARATOR -->
<div class="h-[2px] w-full bg-gradient-to-r from-transparent via-petrol-500 to-transparent opacity-80"></div>

@* ════════════════════════════════════════════════════════════════════════════
   SON EKLENEN PROJELER (4 Sütunlu Grid)
   ════════════════════════════════════════════════════════════════════════════
*@
<section class="py-24 bg-white dark:bg-petrol-950">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

        <div class="flex flex-col md:flex-row items-end justify-between mb-12 gap-4">
            <div>
                <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-2 flex items-center">
                    <i class="fas fa-layer-group text-accent-500 mr-3"></i> Vitrin Projeleri
                </h2>
                <p class="text-gray-500 dark:text-gray-400">Topluluğumuzun geliştirdiği en son inovatif çalışmalar.</p>
            </div>
            <a asp-page="/Projeler/Index" class="group text-petrol-600 dark:text-accent-400 font-semibold hover:text-accent-500 transition-colors flex items-center py-2 px-4 rounded-lg hover:bg-petrol-50 dark:hover:bg-petrol-900">
                Tüm Projeleri Gör <i class="fas fa-arrow-right ml-2 transform group-hover:translate-x-1 transition-transform"></i>
            </a>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
            @foreach (var proje in Model.OneCikanProjeler.Take(4))
            {
                <div class="group bg-gray-50 dark:bg-petrol-900 rounded-2xl overflow-hidden hover:shadow-2xl hover:shadow-petrol-500/10 transition-all duration-500 border border-gray-100 dark:border-petrol-800 flex flex-col h-full">
                    <!-- Resim Alanı -->
                    <div class="h-48 relative overflow-hidden">
                        <img src="@proje.KapakGorseliUrl" class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700" alt="@proje.ProjeAdi" loading="lazy">
                        <div class="absolute inset-0 bg-gradient-to-t from-petrol-900/80 to-transparent opacity-60 group-hover:opacity-40 transition-opacity"></div>
                        <span class="absolute top-3 left-3 bg-white/90 dark:bg-petrol-950/90 backdrop-blur text-petrol-800 dark:text-white text-[10px] font-bold px-2.5 py-1 rounded-md shadow-sm border border-white/20">
                            @proje.Kategori
                        </span>
                        <button class="absolute bottom-3 right-3 w-9 h-9 bg-white text-gray-400 rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transform translate-y-4 group-hover:translate-y-0 transition-all duration-300 shadow-lg hover:bg-accent-500 hover:text-white z-10">
                            <i class="fas fa-heart"></i>
                        </button>
                    </div>

                    <!-- İçerik -->
                    <div class="p-6 flex flex-col flex-grow">
                        <h3 class="font-bold text-lg text-gray-900 dark:text-white mb-2 line-clamp-1 group-hover:text-accent-500 transition-colors">
                            <a asp-page="/Projeler/Detay" asp-route-id="@proje.Id">@proje.ProjeAdi</a>
                        </h3>

                        <div class="flex items-center text-xs text-gray-500 dark:text-gray-400 mb-4">
                            <i class="fas fa-school mr-2 text-petrol-400"></i>
                            <span class="truncate font-medium">@proje.OkulAdi</span>
                        </div>

                        <p class="text-sm text-gray-600 dark:text-gray-400 line-clamp-2 mb-4 flex-grow leading-relaxed">
                            @proje.KisaAciklama
                        </p>

                        <div class="pt-4 border-t border-gray-200 dark:border-petrol-800 flex items-center justify-between text-xs font-medium">
                            <span class="text-gray-400 flex items-center">
                                <i class="far fa-calendar mr-1.5"></i> @proje.OlusturulmaTarihi.ToString("dd MMM yyyy")
                            </span>
                            <span class="flex items-center text-accent-500 bg-accent-50 dark:bg-accent-900/20 px-2 py-1 rounded">
                                <i class="fas fa-star mr-1"></i> 4.8
                            </span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- GRADIENT SEPARATOR -->
<div class="h-[2px] w-full bg-gradient-to-r from-transparent via-petrol-500 to-transparent opacity-80"></div>

@* ════════════════════════════════════════════════════════════════════════════
   ALT BÖLÜM: YARIŞMALAR & HABERLER
   ════════════════════════════════════════════════════════════════════════════
*@
<section class="py-24 bg-gray-50 dark:bg-petrol-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">

            <!-- Yarışmalar -->
            <div>
                <div class="flex items-center justify-between mb-8 pb-4 border-b border-gray-200 dark:border-petrol-800">
                    <h2 class="text-2xl font-bold text-gray-900 dark:text-white flex items-center">
                        <i class="fas fa-trophy text-yellow-500 mr-3"></i> Yaklaşan Yarışmalar
                    </h2>
                    <a asp-page="/Yarismalar/Index" class="text-sm font-bold text-petrol-600 dark:text-petrol-400 hover:text-accent-500">Tümünü Gör</a>
                </div>

                <div class="space-y-5">
                    @foreach (var yarisma in Model.SonYarismalar)
                    {
                        <div class="group flex items-center bg-white dark:bg-petrol-950 p-4 rounded-2xl shadow-sm border border-gray-100 dark:border-petrol-800 hover:border-accent-500/30 hover:shadow-lg transition-all duration-300">
                            <div class="flex-shrink-0 w-16 h-16 bg-petrol-50 dark:bg-petrol-900 rounded-xl flex flex-col items-center justify-center text-center mr-5 group-hover:bg-accent-500 group-hover:text-white transition-colors duration-300">
                                <span class="text-[10px] font-bold uppercase tracking-wider opacity-70">Son</span>
                                <span class="text-lg font-bold leading-none">@yarisma.KalanGun</span>
                                <span class="text-[10px] font-bold">Gün</span>
                            </div>
                            <div class="flex-grow min-w-0">
                                <h4 class="font-bold text-gray-900 dark:text-white mb-1 truncate group-hover:text-accent-500 transition-colors">@yarisma.Baslik</h4>
                                <p class="text-xs text-gray-500 dark:text-gray-400 line-clamp-1 mb-3">@yarisma.KurumAdi</p>
                                <div class="w-full bg-gray-100 dark:bg-petrol-900 rounded-full h-1.5 overflow-hidden">
                                    <div class="bg-gradient-to-r from-yellow-400 to-orange-500 h-1.5 rounded-full" style="width: 75%"></div>
                                </div>
                            </div>
                            <a asp-page="/CagriBilgileri/Detay" asp-route-id="@yarisma.Id" class="flex-shrink-0 ml-4 w-10 h-10 rounded-full border border-gray-200 dark:border-petrol-700 flex items-center justify-center text-gray-400 hover:bg-accent-500 hover:text-white hover:border-accent-500 transition-all">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- Haberler -->
            <div>
                <div class="flex items-center justify-between mb-8 pb-4 border-b border-gray-200 dark:border-petrol-800">
                    <h2 class="text-2xl font-bold text-gray-900 dark:text-white flex items-center">
                        <i class="far fa-newspaper text-purple-500 mr-3"></i> Haberler & Duyurular
                    </h2>
                    <a asp-page="/Haberler/Index" class="text-sm font-bold text-petrol-600 dark:text-petrol-400 hover:text-accent-500">Tümünü Gör</a>
                </div>

                <div class="grid gap-5">
                    @foreach (var haber in Model.SonHaberler)
                    {
                        <div class="group bg-white dark:bg-petrol-950 rounded-2xl shadow-sm hover:shadow-lg transition-all p-4 border border-gray-100 dark:border-petrol-800 flex gap-5 items-start">
                            <div class="w-24 h-24 flex-shrink-0 rounded-xl overflow-hidden relative shadow-inner">
                                <img src="@haber.ResimUrl" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" alt="Haber" onerror="this.src='https://images.unsplash.com/photo-1503676260728-1c00da094a0b?auto=format&fit=crop&q=80&w=150'">
                            </div>
                            <div class="flex-grow">
                                <div class="flex items-center gap-2 mb-2">
                                    <span class="text-[10px] px-2 py-0.5 rounded-full bg-petrol-50 dark:bg-petrol-900 text-petrol-600 dark:text-petrol-300 font-bold uppercase tracking-wide">
                                        @haber.Tur
                                    </span>
                                    <span class="text-xs text-gray-400">@haber.Tarih.ToString("dd MMMM yyyy")</span>
                                </div>
                                <h4 class="text-base font-bold text-gray-900 dark:text-white line-clamp-2 leading-snug group-hover:text-accent-500 transition-colors mb-2">
                                    <a href="#">@haber.Baslik</a>
                                </h4>
                                <p class="text-xs text-gray-500 dark:text-gray-400 line-clamp-2">
                                    @haber.Ozet
                                </p>
                            </div>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</section>