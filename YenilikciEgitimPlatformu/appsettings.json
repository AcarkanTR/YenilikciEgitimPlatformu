{
  /*
   * YenilikciEgitimPlatformu - appsettings.json
   * 
   * Bu dosya uygulamanın tüm yapılandırma ayarlarını içerir.
   * 
   * UYARI: Bu dosya hassas bilgiler içermemelidir!
   * - Production şifreleri Azure Key Vault veya User Secrets'ta saklanmalıdır
   * - Connection string'ler environment variables ile override edilmelidir
   * 
   * Dosya Yapısı:
   * - ConnectionStrings: Veritabanı bağlantıları
   * - Logging: Log seviyeleri
   * - ApplicationSettings: Özel uygulama ayarları
   * - Email: E-posta gönderim ayarları
   * - FileUpload: Dosya yükleme kısıtlamaları
   * - Redis: Cache yapılandırması
   */

  // =============================================================================
  // BAĞLANTI STRİNGLERİ
  // =============================================================================
  "ConnectionStrings": {
    /*
     * SQL Server Bağlantısı
     * 
     * Development: LocalDB kullanılır (SQL Server Express)
     * Production: Azure SQL veya on-premise SQL Server
     * 
     * Güvenlik Notları:
     * - Integrated Security (Windows Authentication) kullanılır
     * - Production'da User ID/Password kullanılıyorsa User Secrets'a taşınmalı
     * - Connection pooling aktif (Max Pool Size=100)
     * - MultipleActiveResultSets: Nested query desteği
     */
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=YenilikciEgitimPlatformu_Prod;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True",

    /*
     * Redis Bağlantısı (Opsiyonel - V1'de Memory Cache kullanılır)
     * 
     * Production'da aktif edilecek:
     * - Dağıtık cache için Redis kullanılır
     * - Session store olarak kullanılabilir
     * - SignalR backplane için kullanılabilir
     */
    "Redis": "localhost:6379,abortConnect=false,connectTimeout=5000,syncTimeout=5000"
  },

  // =============================================================================
  // LOGLAMA AYARLARI
  // =============================================================================
  "Logging": {
    /*
     * Log Seviyeleri:
     * - Trace: En detaylı (her şey loglanır)
     * - Debug: Geliştirme sırasında kullanılır
     * - Information: Genel bilgi mesajları (varsayılan)
     * - Warning: Uyarılar
     * - Error: Hatalar
     * - Critical: Kritik hatalar
     * - None: Loglama kapalı
     * 
     * Serilog tarafından override edilir (Program.cs'de yapılandırıldı)
     */
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    }
  },

  // =============================================================================
  // ASP.NET CORE HOST AYARLARI
  // =============================================================================
  "AllowedHosts": "*",

  // =============================================================================
  // UYGULAMA ÖZEL AYARLARI
  // =============================================================================
  "ApplicationSettings": {
    /*
     * Genel Uygulama Bilgileri
     */
    "ApplicationName": "Yenilikçi Eğitim Platformu",
    "ShortName": "YEP",
    "Version": "1.0.0",
    "Environment": "Development",

    /*
     * URL Yapılandırması
     * 
     * Production'da bu değerler environment variable ile override edilmeli
     */
    "ApplicationUrl": "https://localhost:5001",
    "ApiUrl": "https://localhost:5001/api",

    /*
     * Sayfalama Ayarları
     * 
     * Liste sayfalarında (Duyurular, Projeler, Gönderiler) kaç öğe gösterilecek
     */
    "DefaultPageSize": 12,
    "MaxPageSize": 50,

    /*
     * Oturum Ayarları
     */
    "SessionTimeout": 30, // Dakika cinsinden (30 dakika)
    "RememberMeDuration": 30, // Gün cinsinden (30 gün)

    /*
     * Güvenlik Ayarları
     */
    "MaxLoginAttempts": 5,
    "LockoutDuration": 15, // Dakika cinsinden

    /*
     * İçerik Moderasyonu
     */
    "AutoModeration": false, // V1'de manuel moderasyon
    "RequireApproval": true, // Yeni içerikler onay gerektirir mi?

    /*
     * Oyunlaştırma (Gamification)
     */
    "GamificationEnabled": true,
    "XPMultiplier": 1.0, // XP kazanım çarpanı (event'lerde kullanılır)

    /*
     * Cache Ayarları
     */
    "UseRedis": false, // V1'de false (Memory Cache kullanılır)
    "CacheDuration": 3600, // Saniye cinsinden (1 saat)

    /*
     * SignalR Ayarları
     */
    "SignalREnabled": true,
    "RealTimeNotifications": true
  },

  // =============================================================================
  // E-POSTA AYARLARI
  // =============================================================================
  "EmailSettings": {
    /*
     * SMTP Sunucu Ayarları
     * 
     * V1'de e-posta gönderimi pasif (altyapı hazır)
     * V2'de aktif edilecek:
     * - Email doğrulama
     * - Şifre sıfırlama
     * - Bildirimler
     * 
     * UYARI: Production'da şifreler User Secrets'ta saklanmalı!
     */
    "Enabled": false, // V1'de pasif
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "SmtpUsername": "noreply@yep.com",
    "SmtpPassword": "", // User Secrets'tan okunacak
    "FromEmail": "noreply@yep.com",
    "FromName": "Yenilikçi Eğitim Platformu",
    "EnableSsl": true,
    "UseDefaultCredentials": false,

    /*
     * E-posta Şablonları
     */
    "Templates": {
      "WelcomeEmail": "Templates/Email/Welcome.html",
      "EmailVerification": "Templates/Email/EmailVerification.html",
      "PasswordReset": "Templates/Email/PasswordReset.html",
      "Notification": "Templates/Email/Notification.html"
    }
  },

  // =============================================================================
  // DOSYA YÜKLEME AYARLARI
  // =============================================================================
  "FileUploadSettings": {
    /*
     * Dosya Yükleme Kısıtlamaları
     * 
     * Güvenlik:
     * - İzin verilen dosya türleri whitelist ile kontrol edilir
     * - Dosya boyutu sınırlandırılır
     * - Dosyalar GUID ile yeniden adlandırılır (security through obscurity)
     * - Virus taraması V2'de eklenecek
     */

    // Genel Ayarlar
    "UploadPath": "wwwroot/uploads", // Dosyaların saklanacağı klasör
    "MaxFileSize": 10485760, // 10 MB (byte cinsinden)
    "UseGuidFileNames": true, // GUID ile dosya adı oluştur (güvenlik)

    // Resim Ayarları
    "Images": {
      "MaxSize": 5242880, // 5 MB
      "AllowedExtensions": [ ".jpg", ".jpeg", ".png", ".gif", ".webp", ".svg" ],
      "MaxWidth": 2048,
      "MaxHeight": 2048,
      "ThumbnailWidth": 300,
      "ThumbnailHeight": 300,
      "AutoConvertToWebP": true // Performans için WebP'ye çevir
    },

    // Video Ayarları
    "Videos": {
      "MaxSize": 104857600, // 100 MB
      "AllowedExtensions": [ ".mp4", ".webm", ".mov", ".avi" ]
    },

    // Doküman Ayarları
    "Documents": {
      "MaxSize": 10485760, // 10 MB
      "AllowedExtensions": [ ".pdf", ".doc", ".docx", ".xls", ".xlsx", ".ppt", ".pptx", ".txt" ]
    },

    // Arşiv Ayarları
    "Archives": {
      "MaxSize": 52428800, // 50 MB
      "AllowedExtensions": [ ".zip", ".rar", ".7z" ]
    }
  },

  // =============================================================================
  // SOSYAL MEDYA ENTEGRASYONU (V2)
  // =============================================================================
  "SocialMedia": {
    /*
     * Sosyal medya paylaşım linkleri
     * Footer ve profil sayfalarında kullanılır
     */
    "Facebook": "https://facebook.com/yenilikci-egitim-platformu",
    "Twitter": "https://twitter.com/yep_platform",
    "Instagram": "https://instagram.com/yep_platform",
    "YouTube": "https://youtube.com/@yep_platform",
    "LinkedIn": "https://linkedin.com/company/yenilikci-egitim-platformu"
  },

  // =============================================================================
  // API RATE LIMITING (V2)
  // =============================================================================
  "RateLimiting": {
    /*
     * API endpoint'leri için rate limiting
     * V2'de aktif edilecek (DDoS koruması)
     */
    "Enabled": false,
    "MaxRequestsPerMinute": 60,
    "MaxRequestsPerHour": 1000
  },

  // =============================================================================
  // SEO VE META AYARLARI
  // =============================================================================
  "SeoSettings": {
    /*
     * Varsayılan meta tag'ler
     * Layout.cshtml'de kullanılır
     */
    "DefaultTitle": "Yenilikçi Eğitim Platformu - Proje Tabanlı Öğrenme",
    "DefaultDescription": "Öğretmenler ve öğrenciler için proje tabanlı öğrenme platformu. Projelerini paylaş, işbirliği yap, rozetler kazan!",
    "DefaultKeywords": "eğitim, proje, öğrenme, öğretmen, öğrenci, işbirliği, gamification",
    "DefaultImage": "/images/og-image.jpg",
    "TwitterHandle": "@yep_platform"
  },

  // =============================================================================
  // FEATURE FLAGS (Özellik Anahtarları)
  // =============================================================================
  "FeatureFlags": {
    /*
     * Özellikleri açıp kapatmak için toggle'lar
     * Production'da yeni özellikler kontrollü şekilde açılabilir
     */
    "EnableChat": false, // V2 özelliği
    "EnableAIRecommendations": false, // V2 özelliği
    "EnableVideoConference": false, // V2 özelliği
    "EnableAdvancedAnalytics": false, // V2 özelliği
    "EnableMobileApp": false, // V3 özelliği
    "MaintenanceMode": false // Bakım modu (tüm site kapalı)
  }
}