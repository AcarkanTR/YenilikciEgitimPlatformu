{
  /*
   * YenilikciEgitimPlatformu - appsettings.Development.json
   * 
   * Bu dosya SADECE Development ortamında kullanılır ve
   * appsettings.json'daki değerleri override eder.
   * 
   * Development Özellikleri:
   * - Detaylı loglama
   * - LocalDB kullanımı
   * - Email gönderimi kapalı (console'a yazdırılır)
   * - Cache kapalı veya kısa süreli
   * - Debug modda çalışma
   */

  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=YenilikciEgitimPlatformu_Dev;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information" // SQL query'leri göster
    }
  },

  "ApplicationSettings": {
    "Environment": "Development",
    "ApplicationUrl": "https://localhost:5001",
    "UseRedis": false, // Development'da Memory Cache yeterli
    "CacheDuration": 60, // 1 dakika (hızlı test için)
    "RequireApproval": false, // Development'da onaysız içerik yayınlanır
    "AutoModeration": false
  },

  "EmailSettings": {
    "Enabled": false, // E-posta gönderilmez, console'a yazılır
    "SmtpServer": "localhost",
    "SmtpPort": 25
  },

  "FileUploadSettings": {
    "UploadPath": "wwwroot/uploads/dev" // Development dosyaları ayrı klasörde
  },

  "FeatureFlags": {
    "EnableChat": true, // Development'da test edilir
    "EnableAIRecommendations": true,
    "MaintenanceMode": false
  },

  // Development'a özel: Detaylı hata sayfaları
  "DetailedErrors": true,
  "DeveloperExceptionPage": true
}